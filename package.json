{
  "name": "feishu-enterprise-mcp-server",
  "version": "1.2.0",
  "description": "飞书企业级 MCP 服务器 - 支持文档、Wiki、多维表格、消息、日历等",
  "type": "module",
  "main": "index.js",
  "bin": {
    "feishu-enterprise-mcp": "./index.js"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "node --watch index.js",
    "auth": "node auto_auth.js auto",
    "auth:check": "node auto_auth.js check",
    "auth:headless": "node auto_auth.js auto --headless",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\""
  },
  "keywords": [
    "mcp",
    "feishu",
    "lark",
    "enterprise",
    "model-context-protocol"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "axios": "^1.7.9",
    "puppeteer": "^24.34.0"
  },
  "devDependencies": {
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2"
  },
  "engines": {
    "node": ">=18"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "index.js",
      "!node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 60,
        "lines": 60,
        "statements": 60
      }
    }
  }
}
